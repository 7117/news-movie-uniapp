swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  hight: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin-top: 10rpx;
  margin-buttom: 20rpx;
  margin-left: 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-buttom: 10rpx;
  font-size: 26rpx;
}

.post-tittle {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-buttom: 10rpx;
  margin-left: 10rpx;
}

.post-imgage {
  margin-buttom: 10rpx;
  margin: auto 0;
  margin-left: 10rpx;
  width: 100%;
  height: 340rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  flex-size: 13px;
  flex-direction: row;
  margin-left: 20rpx;
  line-height: 40rpx;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
