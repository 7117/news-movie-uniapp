<template name="postItem">
 <view>
      <!-- 第一部分 -->
      <view class="post-author-date">
        <image src="/images/post/cat.png" class="post-author"></image>
        <text class="post-date">{{item.date}}{{idx}}</text>
      </view>
      <!-- 第二部分 -->
      <text class="post-tittle">{{item.title}}</text>
      <!-- 第三部分 -->
      <image src="{{item.imgSrc}}" style="width:100%;height:500rpx;" class="post-image"></image>
      <text class="post-content">{{item.content}}</text>
      <!-- 第四部分 -->
      <view class="post-like">
        <image class="post-like-image" src="/images/icon/chat.png"></image>
        <text clas="post-like-font">92.00</text>
        <image class="post-like-image" src="/images/icon/view.png"></image>
        <text clas="post-like-font">65.00</text>
      </view>
    </view>
</template>