<import src="post-item/post-item-template.wxml" />
<view>
  <swiper style="width:100%;height:500rpx;" autoplay="true">
    <swiper-item>
      <image src="/images/iqiyi.png" bindtap="onPostTap" data-id="0" style="width:100%;height:500rpx;"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png" bindtap="onPostTap" data-id="1" style="width:100%;height:500rpx;"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/wx.png" bindtap="onPostTap" data-id="2" style="width:100%;height:500rpx;"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-index="idx">
    <view bindtap="onPostTap" data-id = "{{item.postId}}">
      <template is="postItem" data="{{item}}" />
    </view>
  </block>
</view>